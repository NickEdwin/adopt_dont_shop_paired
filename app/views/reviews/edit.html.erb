<main>
  <section class='page-header'>
    <h2 class='page-title'>Edit Review</h2>
  </section>

  <section>
    <div id="flash-alert">
      <% if !!flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p><%= error %></p>
      <% end %>
      <% end %>
    </div>

    <%= form_tag "/reviews/#{@review.id}", method: :patch, class: 'edit-form' do %>
    <label for="rating">Select a Rating:</label>
    <select name="rating" id="rating">
      <option value="0">0</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select><br><br>
      <%= text_field_tag :title, @review.title, placeholder: 'Title' %><br>
      <%= text_field_tag :content, @review.content, placeholder: 'Write your review here.' %><br>
      <%= text_field_tag :picture, @review.picture, placeholder: 'Image URL (optional)' %><br>
      <%= submit_tag 'Save Review', class: 'submit' %>
    <% end %>
  </section>
</main>
